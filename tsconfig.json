{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "test/*": ["test/*"],
      "~/*": ["src/*"]
    },
    "sourceMap": true,
    "outDir": "./build/dist",                // JavaScript output directory
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true,                // Enable declaration files
    "declarationMap": true,             // Generate source maps for declarations
    "declarationDir": "./build/types"         // Directory for declaration files
  },
  "include": ["src/**/*"],              // Include all TypeScript files in src
  "exclude": ["node_modules", "build"]
}
