{
  "compilerOptions": {
    "target": "ESNext",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "test/*": ["test/*"],
      "~/*": ["src/*"]
    },
    "sourceMap": true,
    "outDir": "./build/dist",                
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true,               
    "declarationMap": true,             
    "declarationDir": "./build/types" ,        
    "allowSyntheticDefaultImports":true,
    "moduleResolution": "node",
  },
  "include": ["src/**/*"],              
  "exclude": ["node_modules", "build"]
}
